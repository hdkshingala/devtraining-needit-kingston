        <script><![CDATA[var howlongtogo = gs.getProperty('x_58872_needit.autoCloseOverdue');

var dueNITasks = new GlideRecord("x_58872_needit_needit_task");
dueNITasks.addQuery('due_date','<=',gs.daysAgo(howlongtogo));
dueNITasks.addQuery('state','<',3);

dueNITasks.query();

while(dueNITasks.next()){
	gs.info("NeedIt auto close task:"+dueNITasks.number);
	dueNITasks.work_notes = "CLosed";
	dueNITasks.state = 4;
	dueNITasks.update();
}]]></script>
